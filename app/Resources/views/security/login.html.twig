{% extends "base.html.twig" %}

{% block title %}Authorization{% endblock %}

{% block body %}
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-sm-6 col-md-5 col-lg-4 ml-auto mr-auto">
                <div class="form-group">
                    <h1 class="text-center">Authorization</h1>
                </div>

                {% if error %}
                    <div class="text-center alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Email:</label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
                    </div>

                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" id="password" name="_password"/>
                    </div>

                    <div class="form-group">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <button type="submit" class="form-control btn-primary">Log in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}